<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinaccApp.Login"
             BackgroundColor="#112b47">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="imagenlogin.png" WidthRequest="180" HeightRequest="180"></Image>
            
            <Entry Placeholder="Usuario" x:Name="txtUsuario" TextColor="White" PlaceholderColor="Gray"/>
            <Entry Placeholder="Password" x:Name="txtPassword" IsPassword="True" TextColor="White" PlaceholderColor="Gray"/>
            <Button Text="Iniciar Sesion" Clicked="Button_Clicked" VerticalOptions="Center"
                    TextColor="White" BackgroundColor="Transparent" 
                    BorderWidth="1.5"
                    CornerRadius="50"
                    BorderColor="ForestGreen"
                    ></Button>
            <Label Text="" x:Name="lblResultado" TextColor="Red" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>